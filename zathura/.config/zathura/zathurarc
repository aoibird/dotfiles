
# window frame configurations
set window-height 3000
set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
set window-title-page true
set guioptions vc

# set scrolling options
set scroll-step 40

# font size
set font "Fira Code 15"

# clipboard configurations
set selection-clipboard clipboard

# mappings

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# ----- colour config ----- 
set notification-error-bg "#e4e7e7"
set notification-error-fg "#e0c5af"
set notification-warning-bg "#e4e7e7"
set notification-warning-fg "#e0c5af"
set notification-bg "#e4e7e7"
set notification-fg "#e0c5af"
set completion-group-bg "#e4e7e7"
set completion-group-fg "#eb8929"
set completion-bg "#ffffff"
set completion-fg "#23373b"
set completion-highlight-bg "#eb8929"
set completion-highlight-fg "#e4e7e7"
set inputbar-bg "#ffffff"
set inputbar-fg "#23373b"
set statusbar-bg "#e4e7e7"
set statusbar-fg "#23373b"
set highlight-color "#eb8929"
set highlight-active-color "#14A638"
set default-bg "#e4e7e7"
set default-fg "#23373b"
set recolor-lightcolor "#ffffff"
set recolor-darkcolor "#23373b"
set index-bg "#ffffff"
set index-fg "#23373b"
set index-active-bg "#eb8929"
set index-active-fg "#e4e7e7"
set recolor true
